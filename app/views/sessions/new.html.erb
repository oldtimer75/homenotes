<% provide(:title, "Sign in") %>

<!--main tagline area-->
    <section class="taglineWrap">
      <div class="container">
        <div class="row-fluid  tagline">
          <div class="span10"><h2>Login or create a new account.</h2></div>
          <div class="span2">
            
            <div>
              <%= link_to "Sign up!", signup_path, class: "btn first btn-success" %>
            </div>
            
          </div>
        </div>
      </div> <!-- /container -->
    </section>

    <section class="mainContentWrap">
      <div class="container mainContent">
        <div class="row-fluid">
          <div class="span9">
            <div class="row-fluid">
              <div class="innerSpacer">
                

                <!--sign in form-->
                <div class="row-fluid">
                  <div class="span12 contact">
                    <h1>Sign in</h1>
                   
                    <%= form_for(:session, url: sessions_path) do |f| %>
                                  
                      <div class="control-group">
                          <div class="controls">
                            <%= f.text_field :email, class: "span3 required", placeholder: "e.g. john@gmail.com" %>
                          </div>
                            <label class="control-label" for="email">Email</label>
                      </div>
                          
                      <div class="control-group">
                          <div class="controls">
                            <%= f.password_field :password, class: "span3 required",  placeholder: "Enter password" %>
                          </div>
                          <label class="control-label" for="password">Password</label><i>(<%= link_to "Reset Password", new_password_reset_path %>)</i>
                      </div>
                          
                      <div class="control-group">
                        <div class="controls">
                          <%= check_box_tag :remember_me, 1, params[:remember_me] = true %> 
                        </div>
                        <label class="control-label" for="remember_me">Remember Me?</label>
                      </div>
                      
                      <%= f.submit "Sign in", class: "btn btn-success" %>
                      <br> <br>
                      New user? <%= link_to "Sign up!", signup_path %>
                          
                          
                    <% end %>
                    
                                        
                  </div>
                </div>
                <!--end sign in form-->
                
                
                
              </div>
            </div>
          </div> 
        </div>
      </div>
    </section>
