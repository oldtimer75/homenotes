<% provide(:title, @property.address) %>



<div class="row">
	<h1><%= @property.address %></h1>



  <br>
  <%= gmaps({
       "map_options" => { "auto_zoom" => false, "zoom" => 16},
       "markers"     => { "data" => @json }
      })%>
  <br>
  <div align="right">
    <%= link_to "Edit", edit_property_path, class: "btn btn-small btn-primary" %>
    <% if current_user?(@property.user) %>
      <%= link_to "Delete", @property, class: "btn btn-small btn-primary", method: :delete,
                                     data: { confirm: "Are you sure?" },
                                     title: @property.address %>
    <% end %>
  </div>

  <br>

	<div class="container-fluid">
	  <div class="row-fluid">
	    <div class="span12 well">
	    	
		    <a href= <%= @property.image_url %> > <%= image_tag @property.image_url(:thumb).to_s, class: "thumbnail" %></a>

        <%= form_for(@property, html: {multipart: true}) do |f| %>
      
        <label>
        <%= f.check_box :remove_image, {checked: true, style: 'display:none'}  %>
        </label>

          <div class="control-group">
            <div class="controls">
              </br>
              <%= f.submit "X", class: "label label-info" %>
            </div>
          </div>
        <% end %>
	    </div>
	  </div>
	</div>
   
  <br>
   
  <div class="container-fluid offset1">
    <div class="row-fluid">
      <div class="span5 well">
      	<div class="span2">
      		<b>Price:</b> <br> 
      		<b>Style:</b> <br>
      		<b>Beds:</b> <br>
      		<b>Baths:</b> <br> <br>
      	</div>
      	<div class="span3">
      		<%= number_to_currency(@property.price, precision: 0) %> <br>
      		<%= @property.style %> <br>
      		<%= @property.beds %> <br>
      		<%= @property.baths %> 
      	</div>
      </div>
      <div class="span5 well">
      	<div class="span5">
  	      <b>Contact Information:</b> <br> <br>
  	      <%= @property.contact_name %> <br>
  	      <%= @property.contact_email %> <br>
  	      <%= number_to_phone(@property.contact_phone) %> <br>
   		</div>
      </div>
    </div> <!-- End Row -->
  </div> <!-- End Container -->
   
  <br>
   
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12 well">
        <b>Notes:</b><br>
        <%= @property.notes %>
      </div>
    </div>
  </div>
   
  <br>
   
  <div align="right">
    <%= link_to "Mark Off Checklist", edit_property_path + "#checklist", class: "btn btn-small btn-primary" %>
    <%= link_to "Edit Checklist Items", additem_path, class: "btn btn-small btn-primary" %>
  </div>

  <br>

  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12 well">
        <b>Checked Items</b>
        </br>
        <%= @property.items.collect(&:name).join("<br>").html_safe %>
      </div>
    </div>
  </div>
   
  <br>

</div>
