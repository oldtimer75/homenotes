<% provide(:title, "Reset Password") %>
<h1>Reset Password</h1>

<div class="row">
  <div class="span4 offset3 form-horizontal">
    <%= form_for(:reset, url: resetpass_user_path) do |f| %>

      <div class="control-group">
        <label class="control-label">Email</label>
        <div class="controls">
          <%= f.text_field :email, class: "input-xlarge", placeholder: "Email" %>
        </div>
      </div>
      
      <div class="control-group">
        <div class="controls">
          <%= f.submit "Reset Password", class: "btn btn-large btn-primary" %>
        </div>
      </div>
    <% end %>

    
  </div>
</div>